<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page"
    tools:context="com.example.oneilbogle.mychat.StartPageActivity">


    <Button
        android:id="@+id/need_act_btn"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:background="@android:color/background_light"
        android:padding="10dp"
        android:text="Need new Account"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/al_rdy_Btn" />

    <Button
        android:id="@+id/al_rdy_Btn"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_above="@+id/need_act_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@android:color/background_light"
        android:padding="10dp"
        android:text="Alrady have an an account"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp" />
</RelativeLayout>
